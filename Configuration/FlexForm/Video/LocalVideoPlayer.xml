<T3DataStructure>
      <ROOT>
        <TCEforms>
          <sheetTitle>PlaylistContainer FlexForm</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
                <settings.showInformation>
                        <TCEforms>
                                <label>Show Video Title and Information</label>
                                <config>
                                        <type>check</type>
                               </config>
                       </TCEforms>
                </settings.showInformation>

                <settings.playlists>
                        <TCEforms>
                                <label>Playlists</label>
                                <config>
                                        <type>group</type>
                                        <internal_type>db</internal_type>
                                        <size>4</size>
                                        <maxitems>1000</maxitems>
                                        <minitems>0</minitems>
                                        <allowed>tx_ybvideoplayer_domain_model_playlist</allowed>
                               </config>
                       </TCEforms>
                </settings.playlists>

		<settings.useFirstFromPlaylist>
                        <TCEforms>
                                <label>Just show first Video from Playlist</label>
                                <config>
                                        <type>check</type>
                               </config>
                       </TCEforms>
		</settings.useFirstFromPlaylist>

                <settings.localVideo>
                        <TCEforms>
                                <label>Or choose a custom local video</label>
                                <config>
                                        <type>group</type>
                                        <internal_type>db</internal_type>
                                        <size>1</size>
                                        <maxitems>1</maxitems>
                                        <minitems>0</minitems>
                                        <allowed>tx_ybvideoplayer_domain_model_video</allowed>
                               </config>
                       </TCEforms>
                </settings.localVideo>
       </el>
      </ROOT>
</T3DataStructure>
